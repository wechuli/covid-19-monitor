{
  "name": "react-blog",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "Wechuli",
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "env-cmd -f ./server/config/dev.env nodemon server/src/index.js",
    "start": "node server/src/index.js",
    "dev": " concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "test": "env-cmd -f ./server/config/test.env jest --watch --runInBand",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^6.5.5",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csv-parser": "^2.3.2",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.24.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "pg": "^7.18.2"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "env-cmd": "^10.1.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  }
}